<form action="{{ path('_security_check') }}" method="POST">
    <label>Username:<span class = "required">*</span></label>
    <input type = "text" class = "login_input" name = "_username" placeholder = "username"/><br/>

    <label>Password:<span class = "required">*</span></label>
    <input type = "password" class = "password_input" name = "_password" placeholder = "**********"/><br/>

    <input type = "checkbox" id = "remember_me"/>
    <label for = "remember_me">Remember me on this device<span></span></label>

    <div class = "form_link">
        <a href = "#">Forgot Your password?</a>
    </div>

    <input type="submit" name="login" value="Отправить" />
</form>