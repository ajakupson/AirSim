{% extends 'AirSimSocialNetworkBundle:blue/Layouts:inner.html.twig' %}

{% block pageStylesheets %}
    <link href = "{{ asset('assets/css/blue/chat.css') }}" type = "text/css" rel = "stylesheet" media = "screen" />
{% endblock pageStylesheets %}

{% block pageJavaScripts %}
    <script src ="{{ asset('assets/js/websocket/chatRoomWebSocket.js') }}" type = "text/javascript"></script>
{% endblock pageJavaScripts %}

{% block pageContent %}
    <div class = "chatRoomWrapper">
        <input type = "hidden" id = "userId" value = "10"/>
        <div class = "chatRoom">
            <section class = "chat">
                <div class = "chatOperations">
                    <input type = "button" class = "selectedMessagesDelete" value = ""/>
                    <input type = "button" class = "favoriteMessages" value = ""/>
                    <input type = "text" class = "chatSearch" id = "chatSearch" placeholder = "Search message ..."/>
                </div>
                <div class = "chatParticipant1">
                        <img src = "{{  asset('public_files/app_default/no_avatar_male.png') }}" class = "ava"/>
                    <div class = "participantInfo">
                        Firstname<br/>
                        Lastname
                    </div>
                </div>
                <div class = "chatParticipant2">
                    <img src = "{{  asset('public_files/app_default/no_avatar_male.png') }}" class = "ava"/>
                    <div class = "participantInfo">
                        Firstname<br/>
                        Lastname
                    </div>
                </div>
                <div class = "chatMessages formstone_scroller">
                    {% for i in 1..50 %}
                        {% if i % 2 == 0 %}
                            <div class = "messageParticipant2">
                                <span class = "messageDateTime2">03.01.2015</span>
                                <span class = "messageText">
                                    The jQuery Bower package contains additional files besides the default distribution.
                                    In most cases you can ignore these files, however if you wish to download the default
                                    release on it's own you can use Bower to install jQuery from one of the above urls
                                    instead of the registered package.</span>
                                <input type = "hidden" class = "messageId" value = "{{ i }}"/>
                                <div class = "clear"></div>
                            </div>
                        {% else %}
                            <div class = "messageParticipant1">
                                <span class = "messageDateTime1">03.01.2015</span>
                                <span class = "messageText">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</span>
                                <input type = "button" class = "deleteMessageIcon" value = ""/>
                                <input type = "checkbox" class = "messageSelect" id = "m{{ i }}" unchecked/>
                                <label for = "m{{ i }}"><span></span></label>
                                <input type = "hidden" class = "messageId" value = "{{ i }}"/>
                                <div class = "clear"></div>
                            </div>
                        {% endif %}
                    {% endfor %}
                    <div class = "clear"></div>
                </div>
                <div class = "chatMessageInputWrapper">
                    <textarea class = "areaText" id = "chatMessageTextarea" placeholder = "Message ... "></textarea>
                    <input type = "button" class = "submitButton right" id = "sendChatMessage" value = "Send"/>
                    <div class = "clear"></div>
                </div>
            </section>
            <section class = "chatRooms">
                <ul id = "chatRooms">
                    {% for i in 1..7 %}
                        <a href = "chat_room?id={{ i }}">
                            <li>
                                {#<input type = "button" class = "chatDeleteButton small"/>#}
                                <img src = "{{  asset('public_files/app_default/no_avatar_male.png') }}" class = "authorPic"/>
                                <span class = "author">Bob Marley</span><br/><br/>
                                <span class = "dateTime">11.10.2014</span><br/>
                                <span class = "message">Last message from contact text</span>
                                <input type = "hidden" class = "chatRoomId" value = "{{ i }}"/>
                            </li>
                        </a>
                    {% endfor %}
                </ul>
            </section>
            <div class = "clear"></div>
        </div>
    </div>
{% endblock pageContent %}